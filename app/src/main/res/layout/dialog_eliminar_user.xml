<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"

    android:layout_gravity="center"
    android:gravity="center"
    android:id="@+id/accion_dg_contenedor"
    android:background="@android:color/transparent"

    android:layout_height="wrap_content">



    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:layout_marginTop="19dp"
        android:orientation="vertical"
        android:id="@+id/dg_contenedor_info"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/accion_dg_barra_superior"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/rojo1"
            android:text="x"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:textSize="23sp"
            android:paddingBottom="3dp"
            android:textStyle="bold"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:gravity="center"
            android:orientation="vertical"
            android:layout_marginLeft="14dp"
            android:layout_marginTop="45dp"
            android:layout_marginRight="14dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="22sp"
                android:id="@+id/action_dg_text_accion"
                android:textColor="@android:color/black"

                android:text="¿Eliminar usuario?"

                />

            <EditText
                android:id="@+id/accion_dg_edittext"
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:textSize="20sp"
                android:gravity="center"
                android:textAlignment="center"
                android:inputType="number"
                android:background="@drawable/marco_delgado_negro"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:gravity="center"

                android:id="@+id/accion_dg_texto_compl"

                android:layout_marginLeft="9dp"
                android:layout_marginRight="9dp"
                android:layout_marginBottom="15dp"
                android:textSize="12sp"
                android:textColor="@color/c_letras_hin_formulario"


                android:text="Esta acción borrara la cuenta de este usuario"

                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="22dp"
                android:layout_marginBottom="14sp"


                >

                <Button
                    android:id="@+id/dg_bton_cancelar"
                    android:layout_width="wrap_content"
                    android:textStyle="bold"
                    android:textColor="@color/gris"
                    android:layout_height="30dp"
                    android:background="@drawable/marco_delgado_negro"
                    android:text="CANCELAR"

                    />
                <Space
                    android:layout_width="10dp"
                    android:layout_height="wrap_content" />
                <Button
                    android:background="@color/rojo1"
                    android:id="@+id/dg_bton_aceptar"

                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="confirmar"
                    android:paddingLeft="6dp"
                    android:paddingRight="6dp"

                    android:textColor="@android:color/white"
                    android:textStyle="bold"

                    />


            </LinearLayout>



        </LinearLayout>




        <TextView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/rojo1"
            android:text="x"
            android:id="@+id/action_dg_barra_inferior"

            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:textColor="@android:color/white"
            android:textSize="23sp"
            android:paddingBottom="3dp"
            android:textStyle="bold"
            />




    </android.support.design.widget.CoordinatorLayout>



    <ImageView
        android:id="@+id/accion_dg_icono_grande"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/icon_confirmar_accion"
        android:src="@drawable/icon_x"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold"
        />



</RelativeLayout>
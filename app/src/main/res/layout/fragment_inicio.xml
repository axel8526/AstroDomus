<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_nav_user"

    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.InicioFragment"
    >

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"

            >

            <LinearLayout
                style="@style/contenedor_botones_home2"
                >

                <android.support.v7.widget.CardView
                    style="@style/boton_home_contenedor_card"
                    card_view:cardCornerRadius="2dp"
                    card_view:cardElevation="5dp"
                    card_view:cardUseCompatPadding="true"

                    >

                    <LinearLayout
                        style="@style/boton_home_contenedor"
                        android:id="@+id/home_bton_user"


                        >
                        <RelativeLayout
                            android:background="@color/negro_transparente2"
                            android:layout_width="150dp"
                            android:layout_height="match_parent">
                            <ImageView
                                style="@style/boton_home_icono"



                                />
                            <ImageView



                                style="@style/boton_home_icono"

                                android:padding="35dp"
                                android:src="@drawable/icon_usuarios"


                                />
                        </RelativeLayout>

                        <TextView
                            style="@style/boton_home"
                            android:text="Usuarios"

                            />

                    </LinearLayout>



                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    style="@style/boton_home_contenedor_card"
                    card_view:cardCornerRadius="2dp"
                    card_view:cardElevation="5dp"
                    card_view:cardUseCompatPadding="true">

                    <LinearLayout

                        android:id="@+id/home_bton_reporte"
                        style="@style/boton_home_contenedor"

                        >
                        <RelativeLayout
                            android:background="@color/negro_transparente2"
                            android:layout_width="150dp"
                            android:layout_height="match_parent">
                            <ImageView
                                style="@style/boton_home_icono"

                                />
                            <ImageView
                                style="@style/boton_home_icono"

                                android:padding="35dp"

                                android:src="@drawable/icon_reportes"


                                />
                        </RelativeLayout>



                        <TextView
                            style="@style/boton_home"
                            android:text="Reportes"/>

                    </LinearLayout>
                </android.support.v7.widget.CardView>




            </LinearLayout>


            <LinearLayout
                style="@style/contenedor_botones_home2"
                >

                <android.support.v7.widget.CardView
                    style="@style/boton_home_contenedor_card"
                    card_view:cardCornerRadius="2dp"
                    card_view:cardElevation="5dp"
                    card_view:cardUseCompatPadding="true">
                    <LinearLayout
                        android:id="@+id/home_bton_control"
                        style="@style/boton_home_contenedor"

                        >


                        <RelativeLayout
                            android:background="@color/negro_transparente2"
                            android:layout_width="150dp"
                            android:layout_height="match_parent">
                            <ImageView
                                style="@style/boton_home_icono"

                                />
                            <ImageView
                                style="@style/boton_home_icono"

                                android:padding="35dp"

                                android:src="@drawable/icon_control"


                                />
                        </RelativeLayout>
                        <TextView
                            style="@style/boton_home"
                            android:text="Controles"/>


                    </LinearLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>


            <LinearLayout
                style="@style/contenedor_botones_home2"
                >

                <android.support.v7.widget.CardView
                    style="@style/boton_home_contenedor_card"
                    card_view:cardCornerRadius="2dp"
                    card_view:cardElevation="5dp"
                    card_view:cardUseCompatPadding="true">
                    <LinearLayout
                        android:id="@+id/home_bton_perfil"
                        style="@style/boton_home_contenedor"

                        >


                        <RelativeLayout
                            android:background="@color/negro_transparente2"
                            android:layout_width="150dp"
                            android:layout_height="match_parent"
                            >
                            <ImageView
                                style="@style/boton_home_icono"

                                />
                            <ImageView
                                style="@style/boton_home_icono"

                                android:padding="35dp"
                                android:src="@drawable/icon_perfil"


                                />
                        </RelativeLayout>
                        <TextView
                            style="@style/boton_home"
                            android:text="Perfiles"/>

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    style="@style/boton_home_contenedor_card"
                    card_view:cardCornerRadius="2dp"
                    card_view:cardElevation="5dp"
                    card_view:cardUseCompatPadding="true">
                    <LinearLayout
                        android:id="@+id/home_bton_componente"
                        style="@style/boton_home_contenedor"
                        >


                        <RelativeLayout
                            android:layout_width="150dp"
                            android:background="@color/negro_transparente2"
                            android:layout_height="match_parent">
                            <ImageView
                                style="@style/boton_home_icono"

                                />
                            <ImageView
                                style="@style/boton_home_icono"

                                android:padding="35dp"
                                android:src="@drawable/icon_edit_componentes"


                                />
                        </RelativeLayout>
                        <TextView
                            style="@style/boton_home"

                            android:text="Componentes"/>

                    </LinearLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>





        </LinearLayout>
    </ScrollView>








</FrameLayout>
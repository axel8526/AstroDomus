<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_nav_user"

    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.InicioFragment"
    >

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"

        >

        <LinearLayout
            style="@style/contenedor_botones_home2"
            >

            <LinearLayout
                style="@style/boton_home_contenedor"
                android:id="@+id/home_bton_user"
                android:background="@color/azulT"

                >



                <ImageView
                    style="@style/boton_home_icono"
                    android:src="@drawable/icon_boton_home3"


                    />
                <TextView
                    style="@style/boton_home"
                    android:text="Usuarios"

                    />



            </LinearLayout>
            <LinearLayout
                android:id="@+id/home_bton_control"
                style="@style/boton_home_contenedor"
                android:background="@color/rojoT"
                >


                <ImageView

                    style="@style/boton_home_icono"
                    android:src="@drawable/icon_boton_home1"
                    />
                <TextView
                    style="@style/boton_home"
                    android:text="Controles"/>


            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            style="@style/contenedor_botones_home2"
            >

            <LinearLayout
                android:id="@+id/home_bton_perfil"
                style="@style/boton_home_contenedor"
                android:background="@color/moradoT"

                >


                <ImageView
                    style="@style/boton_home_icono"
                    android:src="@drawable/icon_boton_home5"
                    />
                <TextView
                    style="@style/boton_home"
                    android:text="Perfiles"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/home_bton_componente"
                style="@style/boton_home_contenedor"

                android:background="@color/amarilloT"
                >


                <ImageView
                    style="@style/boton_home_icono"
                    android:src="@drawable/icon_boton_home2"
                    />
                <TextView
                    style="@style/boton_home"
                    android:text="Componentes"/>

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            style="@style/contenedor_botones_home2"
            >
            <LinearLayout
                android:id="@+id/home_bton_reporte"
                style="@style/boton_home_contenedor"
                android:layout_weight="10"
                >


                <ImageView
                    android:background="@color/verdeT"
                    style="@style/boton_home_icono"
                    android:src="@drawable/icon_boton_home4"

                    />
                <TextView
                    style="@style/boton_home"
                    android:text="Reportes"/>

            </LinearLayout>
        </LinearLayout>














    </LinearLayout>
    </ScrollView>

</FrameLayout>
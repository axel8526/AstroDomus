<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_botones_home"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".activities.DatosPersonalesActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        card_view:cardElevation="9dp"
        android:layout_height="wrap_content">

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="@dimen/alto_toobar"
            android:background="@drawable/fondo_app2"
            android:orientation="horizontal"
            xmlns:android="http://schemas.android.com/apk/res/android">
            <Button
                android:id="@+id/toolbar_bton_back"
                android:paddingLeft="12dp"
                android:layout_width="50dp"
                android:onClick="botones"
                android:layout_height="50dp"
                android:background="@android:color/transparent"
                android:drawableStart="@drawable/icon_back"/>

            <RelativeLayout
                android:layout_width="@dimen/alto_toobar"
                android:layout_height="match_parent">

                <ImageView

                    android:layout_width="@dimen/alto_toobar"
                    android:layout_height="match_parent"
                    android:src="@drawable/icon_boton_home6"
                    android:padding="3dp"
                    android:layout_gravity="center_vertical"

                    />
                <ImageView
                    android:id="@+id/inicio_icon_user"

                    android:transitionName="inicio_icon_user_t"
                    android:layout_width="@dimen/alto_toobar"
                    android:layout_height="match_parent"
                    android:src="@drawable/icon_user"
                    android:padding="9dp"
                    android:layout_gravity="center_vertical"

                    />
            </RelativeLayout>

            <TextView
                android:fontFamily="@font/font_1"
                android:id="@+id/toolbar_titulo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Datos personales"
                android:layout_marginLeft="12dp"
                android:textColor="@color/H_letras_principal"
                android:textStyle="bold"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:layout_weight="1"
        android:gravity="center"

        android:orientation="vertical">

        <LinearLayout
            android:layout_marginBottom="7dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"

            android:background="@drawable/fondo_negro_tranparente"
            android:paddingTop="3dp"
            >

            <ImageView

                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:padding="8dp"
                android:src="@drawable/icon_user"
                android:background="@color/negro_transparente2"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <EditText
                    android:id="@+id/dp_nom1"
                    style="@style/edit_text_new"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:hint="Nombre"/>
                <EditText

                    android:id="@+id/dp_nom2"
                    android:layout_weight="1"
                    style="@style/edit_text_new"
                    android:hint="2do nombre"/>
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="7dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"

            android:background="@drawable/fondo_negro_tranparente"
            android:paddingTop="3dp"
            >

            <ImageView

                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:padding="8dp"
                android:src="@drawable/icon_user"
                android:background="@color/negro_transparente2"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2">

                <EditText

                    android:id="@+id/dp_apll1"
                    style="@style/edit_text_new"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:hint="Apeliido"/>
                <EditText

                    android:id="@+id/dp_apll2"
                    android:layout_weight="1"
                    style="@style/edit_text_new"
                    android:hint="2do apellido"/>
            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="7dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"

            android:background="@drawable/fondo_negro_tranparente"
            android:paddingTop="3dp"
            >

            <ImageView

                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:padding="8dp"
                android:src="@drawable/icon_movil"
                android:tint="@android:color/white"
                android:background="@color/negro_transparente2"/>

            <EditText

                android:id="@+id/dp_movil"
                style="@style/edit_text_new"
                android:hint="Movil"/>



        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"

            android:background="@drawable/fondo_negro_tranparente"
            android:paddingTop="3dp"
            >

            <ImageView

                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:padding="8dp"
                android:src="@drawable/icon_direccion"
                android:tint="@android:color/white"
                android:background="@color/negro_transparente2"/>

            <EditText

                android:id="@+id/dp_direccion"
                style="@style/edit_text_new"
                android:hint="Dirección"/>



        </LinearLayout>


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"


            android:background="@drawable/fondo_negro_tranparente"

            android:paddingTop="3dp"
            android:layout_marginTop="35dp"
            >

            <ImageView

                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:padding="8dp"
                android:src="@drawable/icon_password"
                android:background="@color/negro_transparente2"/>

            <EditText

                android:id="@+id/dp_confirmar_clave"
                style="@style/edit_text_new"
                android:hint="Confirmar contraseña"
                android:inputType="textPassword"/>


        </LinearLayout>

        <Button
            android:id="@+id/dp_bton_guardar"
            style="@style/boton_1"
            android:onClick="botones"
            android:layout_width="match_parent"

            android:layout_marginTop="7dp"


            android:text="guardar"

            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"

            />
    </LinearLayout>





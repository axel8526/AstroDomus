<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"

    android:layout_gravity="center"
    android:gravity="center"
    android:background="@android:color/transparent"
    android:id="@+id/ll_dg_contenedor"

    android:layout_height="wrap_content">



    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:layout_marginTop="39dp"
        android:orientation="vertical"
        android:id="@+id/dg_contenedor_info"
        android:layout_height="wrap_content">


        <TextView
            style="@style/dg_atributos_linea"
            />


        <LinearLayout
            style="@style/dg_atributos_cont_atrib"
            >

            <TextView
                style="@style/dg_atributos_titulo"
                android:text="Escoge perfil"
                android:layout_marginBottom="12dp"

                />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <android.support.v7.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            card_view:cardElevation="4dp"
                            card_view:cardCornerRadius="10dp"
                            card_view:cardUseCompatPadding="true"
                            >
                        <ImageView
                            android:id="@+id/dg_perfiles_bton_ma"
                            style="@style/dg_atrituboos_bton_listo"
                            android:layout_margin="0dp"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:padding="10dp"
                            android:src="@drawable/icon_jornada_ma"
                            android:gravity="center"
                            android:text="-"
                            android:textSize="40sp"/>
                        </android.support.v7.widget.CardView>

                        <TextView
                            style="@style/dg_atributos_subtitulo"
                            android:text="MaÃ±ana"
                            android:layout_gravity="center"/>

                    </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <android.support.v7.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        card_view:cardElevation="4dp"
                        card_view:cardCornerRadius="10dp"
                        card_view:cardUseCompatPadding="true"
                        >
                        <ImageView
                            android:id="@+id/dg_perfiles_bton_tarde"
                            style="@style/dg_atrituboos_bton_listo"
                            android:layout_margin="0dp"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:padding="10dp"
                            android:src="@drawable/icon_jornada_tarde"
                            android:gravity="center"
                            android:text="-"
                            android:textSize="40sp"/>
                    </android.support.v7.widget.CardView>

                    <TextView
                        style="@style/dg_atributos_subtitulo"
                        android:text="Tarde"
                        android:layout_gravity="center"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <android.support.v7.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        card_view:cardElevation="4dp"
                        card_view:cardCornerRadius="10dp"
                        card_view:cardUseCompatPadding="true"
                        >
                        <ImageView
                            android:id="@+id/dg_perfiles_bton_noche"
                            style="@style/dg_atrituboos_bton_listo"
                            android:layout_margin="0dp"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:padding="10dp"
                            android:src="@drawable/icon_jornada_noche"
                            android:gravity="center"
                            android:text="-"
                            android:textSize="40sp"/>
                    </android.support.v7.widget.CardView>

                    <TextView
                        style="@style/dg_atributos_subtitulo"
                        android:text="Noche"
                        android:layout_gravity="center"/>

                </LinearLayout>








            </LinearLayout>




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Continuar sin perfil"
                android:layout_margin="12dp"
                android:textSize="14sp"/>

        </LinearLayout>




        <TextView
            android:id="@+id/dg_perfiles_bton_continuar"
            style="@style/dg_atributos_linea"
            android:layout_height="3dp"
            android:layout_gravity="bottom"

            />




    </android.support.design.widget.CoordinatorLayout>



    <RelativeLayout
        style="@style/dg_atributos_cont_icono">

        <ImageView
            style="@style/dg_atributos_fondo_icono"
            />
        <ImageView
            style="@style/dg_atributos_icono"
            android:src="@drawable/icon_perfil"/>
    </RelativeLayout>




</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="@dimen/alto_toobar"
    android:background="@drawable/fondo_app2"
    android:orientation="horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <Button
        android:id="@+id/toolbar_bton_back"
        android:paddingLeft="12dp"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@android:color/transparent"
        android:drawableStart="@drawable/icon_back"/>

    <ImageView
        android:id="@+id/toobar_icono"
        android:layout_width="@dimen/alto_toobar"
        android:layout_height="match_parent"
        android:src="@drawable/icon_boton_home1"
        android:padding="9dp"/>
    <TextView
        android:fontFamily="@font/font_1"
        android:id="@+id/toolbar_titulo"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="Controles"
        android:layout_marginLeft="12dp"
        android:textColor="@color/H_letras_principal"
        android:textStyle="bold"/>

</LinearLayout>
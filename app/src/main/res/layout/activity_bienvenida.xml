<?xml version="1.0" encoding="utf-8"?>

<LinearLayout

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/fondo_nav_user"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_datos_user"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardBackgroundColor="@color/tranparente"
        card_view:cardElevation="12dp">

        <RelativeLayout
            android:id="@+id/inicio_contenedor_datos_user"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/fondo_app2"


            >
            <LinearLayout
                android:layout_marginBottom="12dp"
                android:id="@+id/id_datos_user"
                android:transitionName="id_datos_user_t"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="120dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <ImageView
                    android:id="@+id/inicio_icon_user"
                    android:onClick="botonesInicio"
                    android:transitionName="inicio_icon_user_t"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:background="@drawable/icon_usuario_lista_big"
                    android:src="@drawable/icon_user"
                    android:layout_gravity="center"
                    android:padding="18dp"
                    android:layout_margin="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center_vertical"
                    >

                    <TextView

                        android:id="@+id/inicio_text_bienvenido"
                        android:transitionName="inicio_text_bientenido_t"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bienvenido\nAlexander casanova"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:fontFamily="@font/font_1"
                        android:textColor="@color/H_letras_principal"
                        android:textSize="26sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="7dp"
                        />
                    <TextView
                        android:id="@+id/inicio_text_rol"
                        android:transitionName="inicio_text_rol_t"

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ADMINISTRADOR"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/font_1"
                        android:textColor="@color/H_letras_principal"
                        android:textSize="15sp"
                        android:layout_gravity="center"
                        />
                    <TextView
                        android:id="@+id/inicio_text_cc"
                        android:fontFamily="@font/font_1"
                        android:transitionName="inicio_text_cc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1144102235"
                        android:layout_gravity="center"
                        android:textColor="@color/H_letras_principal"
                        android:textSize="15sp"
                        />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/id_con_correo"
                android:transitionName="id_con_correo_t"

                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_alignParentBottom="true"
                android:gravity="center"


                android:background="@color/H_fondo_secundario">


                <TextView

                    android:id="@+id/inicio_text_correo"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"
                    android:fontFamily="@font/font_1"
                    android:text="alexandercasanova.jr@gmail.com"
                    android:textColor="@color/H_letras_secundario"

                    />
            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
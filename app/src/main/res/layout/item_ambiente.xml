<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"

        card_view:cardElevation="4dp"
        card_view:cardCornerRadius="4dp"
        android:layout_margin="7dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"

            android:background="#5a6d8e"
            android:id="@+id/h_contenedor_item"
            android:orientation="horizontal"
            android:layout_height="@dimen/alto_item_user_list">
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="@drawable/icon_ambiente_lista"

                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:paddingLeft="18dp"
                android:paddingRight="10dp"
                android:layout_weight="1"

                >
                <TextView
                    android:id="@+id/h_nombre_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:text="AMBIENTE B"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/h_rol_user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:textStyle="bold"
                        android:textColor="@color/gris"

                        android:text="DISPONIBLE"/>

                        <!--android:textColor="@android:color/holo_red_dark"-->


                </LinearLayout>



            </LinearLayout>
            <android.support.design.widget.CoordinatorLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">





                <ImageView
                    android:layout_width="30dp"
                    android:background="@drawable/boton_eliminar_user"
                    android:paddingLeft="3dp"
                    android:src="@drawable/icon_power"
                    android:padding="4dp"

                    android:layout_gravity="end"

                    android:layout_height="30dp" />

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:layout_gravity="end|bottom"/>






            </android.support.design.widget.CoordinatorLayout>


        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
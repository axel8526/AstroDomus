<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_botones_home"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".activities.ChangePasswordActivity">

 <android.support.v7.widget.CardView
    android:id="@+id/card_view_datos_user"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="@color/tranparente"
    card_view:cardElevation="12dp">

    <LinearLayout
        android:id="@+id/inicio_contenedor_datos_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:layout_gravity="center"

        android:background="@drawable/fondo_app2"

        android:gravity="center_vertical|bottom"
        android:orientation="vertical">
        <LinearLayout
            android:layout_marginBottom="12dp"
            android:id="@+id/id_datos_user"
            android:gravity="center"
            android:transitionName="id_datos_user_t"


            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="12dp"
            android:layout_gravity="center"
            >

            <ImageView
                android:id="@+id/inicio_icon_user"
                android:transitionName="inicio_icon_user_t"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="@drawable/icon_usuario_lista_big"
                android:src="@drawable/icon_user"
                android:padding="18dp"
                android:layout_margin="12dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="18dp"
                android:layout_gravity="center_vertical"
                >


                <TextView
                    android:id="@+id/inicio_text_rol"
                    android:transitionName="inicio_text_rol_t"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ADMINISTRADOR"
                    android:fontFamily="@font/font_1"
                    android:textColor="@color/H_letras_principal"
                    android:textSize="13sp"
                    />
                <TextView
                    android:id="@+id/inicio_text_cc"
                    android:fontFamily="@font/font_1"
                    android:transitionName="inicio_text_cc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1144102235"
                    android:layout_gravity="center"
                    android:textColor="@color/H_letras_principal"
                    android:textSize="13sp"
                    />
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/id_con_correo"
            android:transitionName="id_con_correo_t"

            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="bottom"
            android:gravity="center"


            android:background="@color/H_fondo_secundario">


            <TextView

                android:id="@+id/inicio_text_correo"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:fontFamily="@font/font_1"
                android:text="alexandercasanova.jr@gmail.com"
                android:textColor="@color/H_letras_secundario"

                />
        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_gravity="center">

        <ScrollView
            android:id="@+id/alex"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_margin="25dp"
                    android:background="@drawable/fondo_formulario"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:padding="13dp"

                    android:layout_height="wrap_content">




                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="20dp"
                        >
                        <ImageView
                            style="@style/icon_1"
                            android:src="@drawable/icon_password2"
                            />

                        <android.support.design.widget.TextInputLayout
                            style="@style/contenedor_edit_text1">


                            <EditText
                                android:id="@+id/cp_password"
                                style="@style/edit_text_1"

                                android:inputType="textPassword"
                                android:hint="Contraseña"/>
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="20dp"
                        >
                        <ImageView
                            style="@style/icon_1"
                            android:src="@drawable/icon_password2"
                            />

                        <android.support.design.widget.TextInputLayout
                            style="@style/contenedor_edit_text1">


                            <EditText
                                android:id="@+id/cp_edit_clave2"
                                style="@style/edit_text_1"

                                android:inputType="textPassword"
                                android:hint="Nueva contraseña"/>
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="20dp"
                        >
                        <ImageView
                            style="@style/icon_1"
                            android:src="@drawable/icon_password2"
                            />

                        <android.support.design.widget.TextInputLayout
                            style="@style/contenedor_edit_text1">


                            <EditText
                                android:id="@+id/cp_edit_clave3"
                                style="@style/edit_text_1"

                                android:inputType="textPassword"
                                android:hint="Confirmar nueva contraseña"/>
                        </android.support.design.widget.TextInputLayout>
                    </LinearLayout>







                </LinearLayout>


            <Button
                android:id="@+id/cp_bton_cambiar"
                style="@style/boton_1"
                android:onClick="botones"

                android:text="cambiar"

                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="22dp"

                />

        </RelativeLayout>

    </ScrollView>



    </LinearLayout>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="bottom"
        android:gravity="center"
        android:weightSum="16"
        android:orientation="horizontal"
        android:background="@color/H_color_toolbar">

        <ImageView
            android:id="@+id/inicio_bton_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/icon_home"
            android:padding="7dp"
            android:layout_weight="4"
            android:onClick="botonesInicio"
            />
        <ImageView
            android:id="@+id/inicio_bton_clave"
            android:onClick="botonesInicio"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:src="@drawable/icon_password"
            android:background="@color/H_color_oscuro_link"
            android:padding="7dp"/>

        <ImageView
            android:id="@+id/inicio_bton_info"
            android:onClick="botonesInicio"
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:src="@drawable/icon_info"
            android:padding="7dp"
            />
        <ImageView
            android:id="@+id/inicio_bton_salir_app"
            android:layout_width="0dp"
            android:onClick="botonesInicio"
            android:layout_weight="4"
            android:layout_height="match_parent"
            android:src="@drawable/icon_cerrar_sesion"
            android:padding="7dp"
            />

    </LinearLayout>


</LinearLayout>


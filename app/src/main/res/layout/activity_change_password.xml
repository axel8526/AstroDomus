<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_botones_home"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".activities.ChangePasswordActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        card_view:cardElevation="9dp"
        android:layout_height="wrap_content">

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="@dimen/alto_toobar"
            android:background="@drawable/fondo_app2"
            android:orientation="horizontal"
            xmlns:android="http://schemas.android.com/apk/res/android">
            <Button
                android:id="@+id/toolbar_bton_back"
                android:paddingLeft="12dp"
                android:layout_width="50dp"
                android:onClick="botones"
                android:layout_height="50dp"
                android:background="@android:color/transparent"
                android:drawableStart="@drawable/icon_back"/>

            <RelativeLayout
                android:layout_width="@dimen/alto_toobar"
                android:layout_height="match_parent">

                <ImageView

                    android:layout_width="@dimen/alto_toobar"
                    android:layout_height="match_parent"
                    android:src="@drawable/icon_boton_home6"
                    android:padding="3dp"
                    android:layout_gravity="center_vertical"

                    />
                <ImageView
                    android:id="@+id/inicio_icon_user"

                    android:transitionName="inicio_icon_user_t"
                    android:layout_width="@dimen/alto_toobar"
                    android:layout_height="match_parent"
                    android:src="@drawable/icon_user"
                    android:padding="9dp"
                    android:layout_gravity="center_vertical"

                    />
            </RelativeLayout>

            <TextView
                android:fontFamily="@font/font_1"
                android:id="@+id/toolbar_titulo"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Cambiar contrase単a"
                android:layout_marginLeft="12dp"
                android:textColor="@color/H_letras_principal"
                android:textStyle="bold"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="20dp"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_gravity="center">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/fondo_negro_tranparente"
            android:paddingTop="3dp"
            android:layout_marginBottom="30dp"

            >

            <ImageView

                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:padding="8dp"
                android:src="@drawable/icon_password"
                android:background="@color/negro_transparente2"/>

            <EditText

                android:id="@+id/cp_password"
                style="@style/edit_text_new"
                android:hint="Contrase単a"
                android:textSize="17sp"
                android:inputType="textPassword"/>


        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"


            android:background="@drawable/fondo_negro_tranparente"

            android:paddingTop="3dp"
            android:layout_marginBottom="12dp"

            >

            <ImageView

                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:padding="8dp"
                android:src="@drawable/icon_lock"
                android:background="@color/negro_transparente2"/>

            <EditText


                android:id="@+id/cp_edit_clave2"
                style="@style/edit_text_new"
                android:textSize="16sp"
                android:hint="Nueva contrase単a"
                android:inputType="textPassword"/>


        </LinearLayout>
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp"


            android:background="@drawable/fondo_negro_tranparente"

            android:paddingTop="3dp"

            >

            <ImageView

                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:padding="8dp"
                android:src="@drawable/icon_lock"
                android:background="@color/negro_transparente2"/>

            <EditText


                android:id="@+id/cp_edit_clave3"
                style="@style/edit_text_new"
                android:textSize="16sp"
                android:hint="Confirmar contrase単a"
                android:inputType="textPassword"/>


        </LinearLayout>





            <Button
                android:id="@+id/cp_bton_cambiar"
                style="@style/boton_1"
                android:onClick="botones"

                android:text="cambiar"
                android:layout_width="match_parent"



                />







    </LinearLayout>


    <LinearLayout
        android:id="@+id/inicio_contenedor_datos_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"

        android:background="@color/negro_transparente2"

        android:gravity="center_vertical|bottom"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/id_con_correo"
            android:transitionName="id_con_correo_t"

            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_gravity="bottom"
